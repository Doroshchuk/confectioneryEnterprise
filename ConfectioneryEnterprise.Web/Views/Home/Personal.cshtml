@model ConfectioneryEnterprise.Domain.Client
@{
    ViewBag.Title = "Personal";
}

<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Personal page @Model.FirstName
                </h1>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start post-content Area -->
<section class="post-content-area single-post-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post row">

                    <div class="col-lg-3  col-md-3 meta-details">
                        @Html.ActionLink("Menu", "Menu")
                    </div>
                    <div class="col-lg-9 col-md-9">
                        <a class="posts-title" href="#"><h3>Login: @Model.Login</h3></a>
                        <p class="excert">
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 sidebar-widgets">
                <div class="widget-wrap">
                    <div class="single-sidebar-widget user-info-widget">
                        <img src="" width="250" height="250" alt="">
                        <a href="#"><h4>@Model.FirstName @Model.LastName</h4></a>
                        <p>
                            @Model.Phone
                        </p>
                        <ul class="social-links">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-github"></i></a></li>
                            <li><a href="#"><i class="fa fa-behance"></i></a></li>
                        </ul>
                        <p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End post-content Area -->
